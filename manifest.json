{
  "manifest_version": 2,
  "icons":{"48":"icon.png"},
  "name": "ScrollTab widget",
  "description": "This extension scrolls the titles of long chrome tab names",
  "version": "1.0",
  "background": {
    "scripts": ["scroll.js"],
    "persistent": false
  },
  "permissions": [
	"tabs",
	"http://*/",
	"https://*/"
  ]
}
